{
    "include": [
        ".react-router/types/**/*",
        "app/**/*",
        "app/**/.server/**/*",
        "app/**/.client/**/*",
        "./db-bootstrap.plugin.ts"
    ],
    "compilerOptions": {
        "composite": true,
        "strict": true,
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "types": ["node", "vite/client"],
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "rootDirs": [".", "./.react-router/types"],
        "paths": {
            "~/*": ["./app/*"]
        },
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "checkJs": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "noEmit": true
    }
}
