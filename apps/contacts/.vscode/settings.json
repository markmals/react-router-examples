{
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.updateImportsOnFileMove.enabled": "always",

    "editor.stickyScroll.enabled": true,

    "biome.enabled": true,

    "prettier.enable": false,
    "eslint.enable": false,
    "deno.enable": false,

    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.addMissingImports": "explicit",
        "source.fixAll.eslint": "explicit",
        "source.fixAll.ts": "explicit"
    },

    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,

    // Language-specific settings
    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[tsx]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[json]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "biomejs.biome"
    },

    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "*.css": "$(capture).css.map, $(capture).*.css",
        // "*.ts": "$(capture).ts.map, $(capture).*.ts, $(capture)_*.ts",
        // "*.tsx": "$(capture).ts, $(capture).*.tsx, $(capture)_*.ts, $(capture)_*.tsx",
        ".env": "*.env, .env.*",
        ".env.local": "*.env, .env.*",
        "package.json": ".vscode*, .npm*, .nvmrc, biome.json*, bun.lock*, tsconfig.*, package-lock.json, workspace.json",
        "readme*": "authors, backers*, changelog*, citation*, code_of_conduct*, codeowners, contributing*, contributors, copying, credits, governance.md, history.md, license*, maintainers, readme*, security.md, sponsors*",
        "vite.config.*": "drizzle.config.*, react-router.config.*, *.plugin.ts"
    },

    // Which files to hide in the VS Code file-tree sidebar
    "files.exclude": {
        "**/.DS_Store": true,
        "build": true,
        ".react-router": true
    },

    "todohighlight.keywords": [
        "MARK:",
        {
            "text": "FIXME:",
            "backgroundColor": "#F14848"
        },
        {
            "text": "TODO:",
            "backgroundColor": "#3593FF"
        }
    ],
    "todohighlight.defaultStyle": {
        "backgroundColor": "#434B54",
        "color": "#fff",
        "borderRadius": "2px"
    }
}
