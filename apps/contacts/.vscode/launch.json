{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "bun",
            "request": "launch",
            "name": "Debug React Router App",
            "program": "${workspaceFolder}/node_modules/.bin/react-router",
            "args": ["dev"],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true
        }
    ]
}
